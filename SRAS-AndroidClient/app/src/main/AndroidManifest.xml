<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sras.sras_androidclient">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activites.ServerListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activites.LoginActivity" >
        </activity>
        <activity android:name=".Activites.DeviceListActivity" >
        </activity>
        <activity android:name=".Activites.AddServerActivity" >
        </activity>
        <activity android:name=".Activites.EditServerActivity" >
        </activity>

        <!-- Preventing screen rotation for controller activities until I figure out how to properly
        persist the device state -->
        <activity android:name=".Activites.LEDControllerActivity"
            android:screenOrientation="portrait">
        </activity>
        <service android:name=".Services.ServerConnectionService" >
        </service>
    </application>

</manifest>